<div class="auth">
	<div class="row">
		<div class="col s12">
			<ul class="tabs">
				<li class="tab col s6"><a class="active" href="#login">Войти</a></li>
				<li class="tab col s6"><a href="#register">Регистрация</a></li>

			</ul>
		</div>
		<div id="login" class="col s6 offset-s3">


			{{#if loginError}} {{!--№61 - Сообщения об ошибке--}}
			<p class="alert">{{loginError}}</p> {{!--№61 - Сообщения об ошибке--}}
			{{/if}} {{!--№61 - Сообщения об ошибке--}}

			<h1>Войти в магазин</h1>
			<form action="/auth/login" method="POST"> {{!--№52 - Добавление сессии --}}

				<div class="input-field">
					<input id="email" name="email" type="email" class="validate" required>
					<label for="email">email</label>
					<span class="helper-text" data-error="введите email"></span>
				</div>

				<div class="input-field">
					<input id="password" name="password" type="password" class="validate" required>
					<label for="password">Пароль</label>
					<span class="helper-text" data-error="error">Введите пароль</span>
				</div>

				<input type="hidden" name="_csrf" value="{{csrf}}"> {{!-- name="_csrf" на донное название удет смотреть
				middleware
				и автомат будет делать всёза нас ---- //№60 - Добавление CSRF-защиты--}}

				<button class="btn btn-primary" type="submit">Войти</button>
			</form>
		</div>
		<div id="register" class="col s6 offset-s3">

			`

			{{#if registerError}} {{!--№61 - Сообщения об ошибке--}}
			<p class="alert">{{registerError}}</p> {{!--№61 - Сообщения об ошибке--}}
			{{/if}} {{!--№61 - Сообщения об ошибке--}}

			<h1>Создать аккаунт</h1>
			<form action="/auth/register" method="POST"> {{!--№52 - Добавление сессии --}}

				<div class="input-field">
					<input id="remail" name="email" type="email" class="validate" required>
					<label for="remail">email</label>
					<span class="helper-text" data-error="введите email"></span>
				</div>

				<div class="input-field">
					<input id="rpassword" name="password" type="password" class="validate" required>
					<label for="rpassword">Пароль</label>
					<span class="helper-text" data-error="error">Введите пароль</span>
				</div>

				<div class="input-field">
					<input id="confirm" name="confirm" type="password" class="validate" required>
					<label for="confirm">Пароль ещё раз</label>
					<span class="helper-text" data-error="error">Введите пароль</span>
				</div>

				<div class="input-field">
					<input id="name" name="name" type="text" class="validate" required>
					<label for="name">Ваше имя</label>
					<span class="helper-text" data-error="error">Введите имя</span>
				</div>

				<input type="hidden" name="_csrf" value="{{csrf}}"> {{!-- _csrf на донное название удет смотреть middleware
				и автомат будет делать всёза нас ---- //№60 - Добавление CSRF-защиты--}}

				<button class="btn btn-primary" type="submit">Зарегистрироваться</button>
			</form>
		</div>

	</div>
</div>