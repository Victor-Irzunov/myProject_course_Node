<h1>Главная №1</h1>

{{#if products.length}}
{{#each products}}
<div class="row1">
	<div class="col">
		<div class="card">
			<div class="card-image">
				<img src="{{img}}" alt='{{title}}'>

			</div>
			<div class="card-content">
				<span class="card-title">{{title}}</span>
				<p class="price">{{price}}</p>
			</div>
			<div class="card-action">
				<a href="/productsss/{{id}}" target='_blank'>Просмотреть</a>


				<a href="/productsss/{{id}}/edit?allow=true">Редактировать</a>



				<form action="/basket/add" method="POST">
					<input type="hidden" name="id" value="{{id}}">              {{!-- {{id есть за счет цикла each ------}}  

					<button class="btn btn-primary" type="submit">В корзину</button>
				</form>
			</div>
		</div>
	</div>
</div>
{{/each}}
{{else}}
<p>Пока продуктов нет</p>
{{/if}}